{
    "name": "quiz",
    "description": "A Quiz app built on the Salesforce Platform",
    "version": "0.0.0",
    "author": "pozil",
    "bugs": "https://github.com/pozil/quiz/issues",
    "dependencies": {
        "dotenv": "^8.1.0",
        "jsforce": "^1.9.2",
        "lwc-services": "^1.3.0-beta.10",
        "normalize.css": "^8.0.1",
        "ws": "^7.1.1"
    },
    "devDependencies": {
        "husky": "^2.7.0",
        "lint-staged": "^8.2.1"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "homepage": "https://github.com/pozil/quiz",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "CC0-1.0",
    "lint-staged": {
        "**/*.{css,html,js,json,md,yaml,yml}": [
            "prettier --write"
        ],
        "**/modules/**/*.js": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    },
    "repository": "pozil/quiz",
    "scripts": {
        "start": "npm run build:production && node src/server/server.js",
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write '**/*.{css,html,js,json,md,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{css,html,js,json,md,yaml,yml}'",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "preinstall": "rm -fr src/client/resources/dist",
        "postinstall": "mkdir -p src/client/resources/dist && cp node_modules/normalize.css/normalize.css src/client/resources/dist/."
    }
}
