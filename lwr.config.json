{
    "layoutsDir": "$rootDir/src/client/layouts",
    "lwc": {
        "modules": [{ "dir": "$rootDir/src/client/modules" }]
    },
    "bundleConfig": { "exclude": ["lwc"] },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/client/assets",
            "urlPath": "/assets"
        }
    ],
    "routes": [
        {
            "id": "home",
            "path": "/",
            "rootComponent": "ui/app",
            "layoutTemplate": "$layoutsDir/index.html"
        }
    ]
}
